---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png"; // You may want to replace this with a relevant image for MountainAsh
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="MountainAsh CCR Data Solution"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
        Comprehensive Credit Reporting.<br>
        Done Right.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      MountainAsh provides a suite of flexible Comprehensive Credit Reporting (CCR) data solutions for the financial services industry.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href={import.meta.env.BASE_URL + "/contact"}
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-envelope" />
        Contact Us
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href={import.meta.env.BASE_URL + "/about"}
        class="flex gap-1 items-center justify-center">
        <Icon class="text-black w-4 h-4" name="bx:bxs-user" />
        About Us
      </Link>
    </div>
  </div>
</main>